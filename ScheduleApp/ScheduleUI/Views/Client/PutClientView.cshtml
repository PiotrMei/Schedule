@model ScheduleCore.Application.Commands.PutClientByIdCommand
@{
	ViewData["Title"] = "Klient";
}

<form method="Get">
	<div class="mb-3">
		<button type="Submit" class="btn btn-primary me-3"
				asp-controller="Client"
				asp-action="GetClientById"
				asp-route-ClientId="@Model.ClientId">
			Powrót
		</button>
	</div>
</form>

<form method="post">
	<div class="mb-3">
		<label class="form-label">Imię</label>
		<input type="text" class="form-control" asp-for="Name" value="@Model.Name"/>
	</div>
	<div class="mb-3">
		<label class="form-label">Nazwisko</label>
		<input type="text" class="form-control" asp-for="LastName" value="@Model.LastName"/>
	</div>
	<div class="mb-3">
		<label class="form-label">Numer telefonu</label>
		<input type="text" class="form-control" asp-for="PhoneNumber" value="@Model.PhoneNumber"/>
	</div>
	<div class="mb-3">
		<label class="form-label">Uwagi</label>
		<input type="text" class="form-control" asp-for="Remarks" value="@Model.Remarks"/>
	</div>
	<div class="mb-3">
		<label class="form-label">Kod pocztowy</label>
		<input type="text" class="form-control" asp-for="PostalCode" value="@Model.PostalCode"/>
	</div>
	<div class="mb-3">
		<label class="form-label">Miasto</label>
		<input type="text" class="form-control" asp-for="City" value="@Model.City"/>
	</div>
	<div class="mb-3">
		<label class="form-label">Ulica</label>
		<input type="text" class="form-control" asp-for="Street" value="@Model.Street"/>
	</div>
	<div class="mb-3">
		<label class="form-label">Numer</label>
		<input type="text" class="form-control" asp-for="Number" value="@Model.Number"/>
		<input type="text" asp-for="ClientId" value="@Model.ClientId"/>

	</div>
	<div class="mb-3">
		<button type="submit" class="btn btn-primary me-3"
				asp-controller="Client"
				asp-action="PutClientById">
			Zapisz
		</button>
	</div>
</form>



